@model UniProject.Core.DTOs.Admin.ProductCategory.CategoryInfoViewModel
@{
    ViewData["Title"] = "DeleteCategory";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-header">
        <div class="card-title-wrap bar-success">
            <h4 class="card-title" id="horz-layout-colored-controls">حذف دسته بندی </h4>
        </div>
    </div>
    <div class="card-body">
        <div class="px-3">
            <form class="form form-horizontal" asp-action="DeleteCategory" method="post">
                <input type="hidden" asp-for="CategoryIDLevel3" />
                <div class="form-body">
                    <h4 class="form-section">
                        <i class="icon-direction"></i> دسته بندی محصول
                    </h4>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-md-3 label-control">عنوان :</label>
                                <div class="col-md-9">
                                    <input type="text" asp-for="CategoryTitleLevel3" class="form-control round" readonly>
                                    <span class="text-danger" asp-validation-for="CategoryTitleLevel3"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-md-3 label-control" for="userinput2">URL:</label>
                                <div class="col-md-9">
                                    <input type="text" asp-for="CategoryURL" class="form-control round" readonly>
                                </div>
                            </div>
                        </div>
                    </div>

                    <h4 class="form-section">
                        <i class="ft-mail"></i>پدر دسته بندی محصول
                    </h4>

                    <div class="row">
                        <div class="col-xl-4 col-lg-6 col-md-12">
                            <fieldset class="form-group">
                                <label>اصلی</label>
                                <input type="text" asp-for="CategoryTitleLevel1" class="form-control round" readonly>
                            </fieldset>
                        </div>
                        <div class="col-xl-4 col-lg-6 col-md-12">
                            <fieldset class="form-group">
                                <label>فرعی</label>
                                <input type="text" asp-for="CategoryTitleLevel2" class="form-control round" readonly>
                            </fieldset>
                        </div>
                    </div>
                </div>
                <div class="form-actions right">
                    <a>
                        <button type="submit" class="btn btn-success">
                            <i class="icon-check"></i> حذف
                        </button>
                    </a>
                    <a href="/admin/ProductCategory" class="btn btn-danger mr-1">
                        <i class="ft-x"></i> لغو
                    </a>
                </div>
            </form>

        </div>
    </div>
</div>

