@model UniProject.Core.DTOs.Admin.Product.GetProductDetailsViewModel
@using UniProject.Core.DTOs.Admin.Product.Delete
@{
    ViewData["Title"] = "EditProduct";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

    List<ShowImagesViewModel> images = ViewData["Images"] as List<ShowImagesViewModel>;
    List<ShowFeaturesViewModel> features = ViewData["Features"] as List<ShowFeaturesViewModel>;
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <div class="card-title-wrap bar-success">
                <h4 class="card-title" id="hidden-label-basic-form">ویرایش محصول</h4>
            </div>
            <p class="mb-0"></p><p class="textalign">
            </p>
        </div>
        <div class="card-body">
            <div class="px-3">
                <div class="form-body">
                    <input type="hidden" asp-for="ProductId" />
                    <!--اطلاعات محصول-->
                    <h4 class="form-section">
                        <i class="icon-user"></i> اطلاعات محصول
                    </h4>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-md-3 label-control">عنوان محصول :</label>
                                <div class="col-md-6">
                                    <input id="ProductName" asp-for="ProductName" type="text" class="form-control border-primary">
                                    <span asp-validation-for="ProductName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 label-control">برند:</label>
                                <div class="col-md-6">
                                    <input type="text" asp-for="Brand" id="Brand" class="form-control border-primary">
                                    <span asp-validation-for="Brand" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 label-control">توضیح مختصر:</label>
                                <div class="col-md-6">
                                    <input type="text" asp-for="ShortDescription" id="ShortDescription" class="form-control border-primary">
                                    <span asp-validation-for="ShortDescription" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-md-3 label-control">توضیحات : </label>
                                <div class="col-md-9">
                                    <textarea rows="6" asp-for="Description" id="Description" class="form-control col-md-9 border-primary"></textarea>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                            </div>
                        </div>


                        <!--<div class="col-md-1"></div>
        <div class="col-md-5">-->
                        @*<div>
                <label for="basicInput">نمایش داده شود؟ </label>
                <input type="checkbox" id="IsActive">
            </div>*@
                        @*<div>
                <label>وضعیت نمایش در سایت:</label>
                <br />
                <div class="custom-control custom-radio display-inline-block col-2">
                    <input type="radio" asp-for="IsActive" value="true" id="customRadioInline4" class="custom-control-input">
                    <label class="custom-control-label" for="customRadioInline4">فعال</label>
                </div>
                <div class="col-1"></div>
                <div class="custom-control custom-radio display-inline-block col-2">
                    <input type="radio" asp-for="IsActive" value="false" id="customRadioInline3" class="custom-control-input">
                    <label class="custom-control-label" for="customRadioInline3">غیرفعال</label>
                </div>
            </div>*@
                        <!--</div>-->
                    </div>

                    <!--اطلاعات دسته بندی محصول-->
                    <h4 class="form-section">
                        <i class="icon-user"></i> اطلاعات دسته بندی محصول
                    </h4>
                    <div class="row">
                        <div class="col-xl-4 col-lg-6 col-md-12">
                            <fieldset class="form-group">
                                <label>سطح اول</label>
                                <select class="form-control" id="CategoryLevel1" asp-items="@(ViewData["CategoryLevel1"] as SelectList)"></select>
                                @*<span class="text-danger"></span>*@
                            </fieldset>
                        </div>
                        <div class="col-xl-4 col-lg-6 col-md-12">
                            <fieldset class="form-group">
                                <label>سطح دوم</label>
                                <select class="form-control" id="CategoryLevel2" asp-items="@(ViewData["CategoryLevel2"] as SelectList)"></select>
                                @*<span class="text-danger"></span>*@
                            </fieldset>
                        </div>
                        <div class="col-xl-4 col-lg-6 col-md-12">
                            <fieldset class="form-group">
                                <label>سطح سوم</label>
                                <select class="form-control" asp-for="CategoryId" id="CategoryId" asp-items="@(ViewData["CategoryLevel3"] as SelectList)"></select>
                                @*<span class="text-danger"></span>*@
                            </fieldset>
                        </div>
                    </div>

                    <!--اطلاعات فروشنده محصول-->
                    <h4 class="form-section">
                        <i class="icon-user"></i> اطلاعات فروشنده
                    </h4>
                    <div class="row">
                        <div class="col-xl-4 col-lg-6 col-md-12">
                            <fieldset class="form-group">
                                <label>نام فروشنده</label>
                                <select class="form-control" asp-for="SellerId" id="SellerId" asp-items="@(ViewData["Seller"] as SelectList)"></select>
                                <span asp-validation-for="SellerId" class="text-danger"></span>
                            </fieldset>
                        </div>
                        <div class="col-xl-4 col-lg-6 col-md-12">
                            <fieldset class="form-group">
                                <label>قیمت به نومان</label>
                                <input type="number" id="Price" asp-for="Price" class="form-control border-primary">
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </fieldset>
                        </div>
                        <div class="col-xl-4 col-lg-6 col-md-12">
                            <fieldset class="form-group">
                                <label>موجودی محصول</label>
                                <input type="number" id="Inventory" asp-for="Inventory" class="form-control border-primary">
                                <span asp-validation-for="Inventory" class="text-danger"></span>
                            </fieldset>
                        </div>
                    </div>

                    <!--ویژگی های محصول-->
                    <h4 class="form-section">
                        <i class="icon-user"></i> ویژگی های محصول
                    </h4>
                    <div class="row">
                        <div class="col-3">
                            <div class="form-group">
                                <label>نام ویژگی</label>
                                <input type="text" class="form-control" id="txtDisplayName" placeholder="نام ویژگی">
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="form-group">
                                <label>مقدار ویژگی</label>
                                <input type="text" class="form-control" id="txtValue" placeholder="مقدار ویژگی">
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="card-block">
                                <p></p>
                                <a class="btn btn-success" id="btnAddFeatures"> افزودن </a>
                            </div>
                        </div>
                    </div>
                    <div class="card-block">
                        <table class="table table-striped" id="tbl_Features">
                            <thead>
                                <tr>
                                    <th>نام ویژگی</th>
                                    <th>مقدار ویژگی</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in features)
                                {
                                    <tr>
                                        <td>@item.FeatuerTitle</td>
                                        <td>@item.FeatureValue</td>
                                        <td>
                                            <a class="idFeatures btn btn-danger"> حذف </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                    <!--گالری تصاویر محصول-->
                    @*<h4 class="form-section">
                        <i class="icon-user"></i>گالری تصاویر
                    </h4>
                    <div class="form-group">
                        <label>انتخاب تصاویر</label>
                        <input type="file" multiple class="form-control-file" accept="image/*" id="Images">
                    </div>*@
                    <div class="col-12 col-sm-12">
                        <figure class="col-xl-6 col-lg-4 col-sm-6 col-12">
                            @foreach (var item in images)
                            {
                                <a target="_blank" href="~/@item.ImageName">
                                    <img width="200" height="200" class="img-thumbnail img-fluid" src="~/@item.ImageName">
                                </a>
                            }
                        </figure>
                    </div>
                </div>
                <div class="form-actions">
                    <a href="/Admin/ShowProducts" class="btn mr-1 btn-danger">
                        <i class="ft-x"></i> لغو
                    </a>
                    <a id="btnEditProduct" class="btn btn-success">
                        <i class="icon-check"></i> ذخیره
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>





@section Scripts
{
    <script>

        //for Category
        $("#CategoryLevel1").change(function () {
            $("#CategoryLevel2").empty();
            $("#CategoryId").empty();
            $.getJSON("/admin/products/GetCategoryLevel2/" + $("#CategoryLevel1 :selected").val(),
                function (data) {
                    $.each(data,
                        function () {
                            $("#CategoryLevel2").append('<option value=' + this.value + '>' + this.text + '</option>');
                        });
                });
        });
        $("#CategoryLevel2").change(function () {
            $("#CategoryId").empty();
            $.getJSON("/admin/products/GetCategoryLevel3/" + $("#CategoryLevel2 :selected").val(),
                function (data) {
                    $.each(data,
                        function () {
                            $("#CategoryId").append('<option value=' + this.value + '>' + this.text + '</option>');
                        });
                });
        });

        //for Features
        $("#btnAddFeatures").on("click", function () {

            var txtDisplayName = $("#txtDisplayName").val();
            var txtValue = $("#txtValue").val();

            if (txtDisplayName == "" || txtValue == "") {
                swal.fire(
                    'هشدار!',
                    "نام و مقدار را باید وارد کنید",
                    'warning'
                );
            }
            else {
                $('#tbl_Features tbody').append('<tr> <td>' + txtDisplayName + '</td>  <td>' + txtValue + '</td> <td> <a class="idFeatures btn btn-danger"> حذف </a> </td> </tr>');
                $("#txtDisplayName").val('');
                $("#txtValue").val('');
            }
        });

        $("#tbl_Features").on('click', '.idFeatures', function () {
            $(this).closest('tr').remove();
        });

        //for Image
        //function readURL(input) {

        //    if (input.files && input.files[0]) {
        //        var reader = new FileReader();

        //        reader.onload = function (e) {
        //            $('#imgProduct').attr('src', e.target.result);
        //        }

        //        reader.readAsDataURL(input.files[0]);
        //    }
        //}

        $('#btnEditProduct').on('click', function () {

            var data = new FormData();

            //دریافت مقادیر از تکس باکس ها و....
            data.append("ProductName", $("#ProductName").val());
            data.append("ShortDescription", $("#ShortDescription").val());
            data.append("Description", $("#Description").val());
            data.append("Brand", $("#Brand").val());
            data.append("Price", $("#Price").val());
            data.append("Inventory", $("#Inventory").val());
            data.append("CategoryId", $('#CategoryId').find('option:selected').val());
            data.append("SellerId", $('#SellerId').find('option:selected').val());


            //دریافت عکس های انتخاب شده توسط کاربر و قرار دادن عکس ها در متغیر data
            //var productImages = document.getElementById("Images");

            //if (productImages.files.length > 0) {
            //    for (var i = 0; i < productImages.files.length; i++) {
            //        data.append('Images-' + i, productImages.files[i]);
            //    }
            //}

            //دریافت ویژگی های محصول از جدول
            var dataFeaturesViewModel = $('#tbl_Features tr:gt(0)').map(function () {
                return {
                    FeatuerTitle: $(this.cells[0]).text(),
                    FeatureValue: $(this.cells[1]).text(),
                };
            }).get();

            $.each(dataFeaturesViewModel, function (i, val) {
                data.append('[' + i + '].FeatuerTitle', val.FeatuerTitle);
                data.append('[' + i + '].FeatureValue', val.FeatureValue);

            });

            // ارسال اطلاعات بع کنترلر
            var ajaxRequest = $.ajax({
                type: "POST",
                url: "https://localhost:44354/admin/EditProduct/@Model.ProductId",
                contentType: false,
                processData: false,
                data: data,
                success: function (data) {

                    if (data.isSuccess == true) {
                        window.location.href = "https://localhost:44354/admin/ShowProducts";
                    }
                }

            });
        });
    </script>
}

