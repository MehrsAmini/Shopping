
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <div class="card-title-wrap bar-success">
                <h4 class="card-title" id="hidden-label-basic-form">افزودن محصول جدید</h4>
            </div>
            <p class="mb-0"></p><p class="textalign">
                برای افزودن محصول جدید کافیست اطلاعات زیر را پر کنید
            </p>
        </div>
        <div class="card-body">
            <div class="px-3">
                <div class="form-body">
                    <!--اطلاعات محصول-->
                    <h4 class="form-section">
                        <i class="icon-user"></i> اطلاعات محصول
                    </h4>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-md-3 label-control">عنوان محصول :</label>
                                <div class="col-md-6">
                                    <input id="ProductName" type="text" class="form-control border-primary">
                                    <span  class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 label-control">برند:</label>
                                <div class="col-md-6">
                                    <input type="text" id="Brand" class="form-control border-primary">
                                    <span  class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-md-3 label-control">توضیح مختصر:</label>
                                <div class="col-md-6">
                                    <input type="text" id="ShortDescription" class="form-control border-primary">
                                    <span  class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group row">
                                <label class="col-md-3 label-control">توضیحات : </label>
                                <div class="col-md-9">
                                    <textarea rows="6" id="Description" class="form-control col-md-9 border-primary"></textarea>
                                    <span  class="text-danger"></span>
                                </div>
                            </div>
                        </div>


                        <!--<div class="col-md-1"></div>
                        <div class="col-md-5">-->
                        @*<div>
                                <label for="basicInput">نمایش داده شود؟ </label>
                                <input type="checkbox" id="IsActive">
                            </div>*@
                        @*<div>
                                <label>وضعیت نمایش در سایت:</label>
                                <br />
                                <div class="custom-control custom-radio display-inline-block col-2">
                                    <input type="radio" asp-for="IsActive" value="true" id="customRadioInline4" class="custom-control-input">
                                    <label class="custom-control-label" for="customRadioInline4">فعال</label>
                                </div>
                                <div class="col-1"></div>
                                <div class="custom-control custom-radio display-inline-block col-2">
                                    <input type="radio" asp-for="IsActive" value="false" id="customRadioInline3" class="custom-control-input">
                                    <label class="custom-control-label" for="customRadioInline3">غیرفعال</label>
                                </div>
                            </div>*@
                        <!--</div>-->
                    </div>

                    <!--اطلاعات دسته بندی محصول-->
                    <h4 class="form-section">
                        <i class="icon-user"></i> اطلاعات دسته بندی محصول
                    </h4>
                    <div class="row">
                        <div class="col-xl-4 col-lg-6 col-md-12">
                            <fieldset class="form-group">
                                <label>سطح اول</label>
                                <select class="form-control" id="CategoryLevel1" asp-items="@(ViewData["CategoryLevel1"] as SelectList)"></select>
                                @*<span class="text-danger"></span>*@
                            </fieldset>
                        </div>
                        <div class="col-xl-4 col-lg-6 col-md-12">
                            <fieldset class="form-group">
                                <label>سطح دوم</label>
                                <select class="form-control" id="CategoryLevel2" asp-items="@(ViewData["CategoryLevel2"] as SelectList)"></select>
                                @*<span class="text-danger"></span>*@
                            </fieldset>
                        </div>
                        <div class="col-xl-4 col-lg-6 col-md-12">
                            <fieldset class="form-group">
                                <label>سطح سوم</label>
                                <select class="form-control" id="CategoryId" asp-items="@(ViewData["CategoryLevel3"] as SelectList)"></select>
                                @*<span class="text-danger"></span>*@
                            </fieldset>
                        </div>
                    </div>

                    <!--اطلاعات فروشنده محصول-->
                    <h4 class="form-section">
                        <i class="icon-user"></i> اطلاعات فروشنده
                    </h4>
                    <div class="row">
                        <div class="col-xl-4 col-lg-6 col-md-12">
                            <fieldset class="form-group">
                                <label>نام فروشنده</label>
                                <select class="form-control" id="SellerId" asp-items="@(ViewData["Seller"] as SelectList)"></select>
                                <span  class="text-danger"></span>
                            </fieldset>
                        </div>
                        <div class="col-xl-4 col-lg-6 col-md-12">
                            <fieldset class="form-group">
                                <label>قیمت به نومان</label>
