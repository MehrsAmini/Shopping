@model UniProject.Core.DTOs.UserPanel.InformationUserViewModel
@using UniProject.Core.Convertor

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<title>پنل کاربری @User.Identity.Name</title>
<div class="container-main">
    <div class="d-block">
        <section class="profile-home">
            <div class="col-lg">
                <div class="post-item-profile order-1 d-block">
                    <div class="col-lg-3 col-md-3 col-xs-12 pr">
                        <div class="sidebar-profile sidebar-navigation">
                            <partial name="_SideBar" />
                        </div>
                    </div>
                    <div class="col-lg-9 col-md-9 col-xs-12 pl">
                        <div class="profile-content">
                            <div class="profile-stats">
                                <table class="table table-profile">
                                    <tbody>
                                        <tr>
                                            <td class="w-50">
                                                <div class="title">نام کاربری:</div>
                                                <div class="value">@Model.UserName</div>
                                            </td>
                                            <td>
                                                <div class="title">پست الکترونیک :</div>
                                                <div class="value">@Model.Email</div>
                                            </td>
                                        </tr>
                                        <tr>
                                            @*<td>
                                                    <div class="title">شماره تلفن همراه:</div>
                                                    <div class="value">*******0991</div>
                                                </td>*@
                                            <td>
                                                <div class="title">موجودی کیف پول:</div>
                                                <div class="value">@Model.ReminderWallet.ToString("#,0") تومان</div>
                                            </td>
                                            <td>
                                                <div class="title">تاریخ عضویت:</div>
                                                <div class="value">@Model.RegisterDate.ToShamsi()</div>
                                            </td>
                                        </tr>
                                        @*<tr>
                                                <td>
                                                    <div class="title"> دریافت خبرنامه :</div>
                                                    <div class="value">بله</div>
                                                </td>
                                                <td>
                                                    <div class="title"> کد ملی :</div>
                                                    <div class="value">-</div>
                                                </td>
                                            </tr>*@
                                    </tbody>
                                </table>
                                <div class="profile-edit-action">
                                    <a href="/UserPanel/EditProfile" class="link-spoiler-edit btn btn-secondary">ویرایش اطلاعات</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>