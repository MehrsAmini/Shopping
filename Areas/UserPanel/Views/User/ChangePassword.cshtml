@model UniProject.Core.DTOs.UserPanel.ChangePasswordViewModel
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-main">
    <div class="d-block">
        <section class="profile-home">
            <div class="col-lg">
                <div class="post-item-profile order-1 d-block">
                    <div class="col-lg-3 col-md-3 col-xs-12 pr">
                        <div class="sidebar-profile sidebar-navigation">
                            <partial name="_SideBar" />
                        </div>
                    </div>
                    <div class="col-lg-9 col-md-9 col-xs-12 pl">
                        <div class="profile-content">
                            <div class="profile-stats">
                                <div class="profile-address">
                                    <div class="middle-container">
                                        <form asp-action="ChangePassword" method="post" class="form-checkout">
                                            <div class="form-checkout-row">
                                                <table class="table table-profile">
                                                    <tbody>
                                                        <tr>
                                                            <td class="w-25">
                                                                <div>
                                                                    <label for="password">رمز عبور قبلی <abbr class="required" title="ضروری" style="color:red;">*</abbr></label>
                                                                    <input asp-for="OldPassword" type="password" id="password" class="input-password-checkout form-control">
                                                                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                                                                </div>
                                                            </td>
                                                            <td>

                                                            </td>
                                                            <td>

                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                <div>
                                                                    <label for="password">رمز عبور جدید <abbr class="required" title="ضروری" style="color:red;">*</abbr></label>
                                                                    <input asp-for="NewPassword" type="password" id="password" class="input-password-checkout form-control">
                                                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                        <tr>
                                                            <td>
                                                                <div>
                                                                    <label for="password">تکرار رمز عبور جدید <abbr class="required" title="ضروری" style="color:red;">*</abbr></label>
                                                                    <input asp-for="ReNewPassword" type="password" id="password" class="input-password-checkout form-control">
                                                                    <span asp-validation-for="ReNewPassword" class="text-danger"></span>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                                <div class="AR-CR">
                                                    <button class="btn-registrar"> ثبت تغییرات </button>
                                                    <a href="/UserPanel" class="cancel-edit-address" data-dismiss="modal" aria-label="Close">بازگشت</a>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

