@model List<UniProject.DataLayer.Entity.Address>
@{
    ViewData["Title"] = "ShowAddress";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-main">
    <div class="d-block">
        <section class="profile-home">
            <div class="col-lg">
                <div class="post-item-profile order-1 d-block">
                    <div class="col-lg-3 col-md-3 col-xs-12 pr">
                        <div class="sidebar-profile sidebar-navigation">
                            <partial name="_SideBar" />
                        </div>
                    </div>
                    <div class="col-lg-9 col-md-9 col-xs-12 pl">
                        <div class="profile-content">
                            <div class="profile-stats">
                                <div class="profile-address">
                                    <div class="text">
                                        <a href="/UserPanel/CreateAddress" class="btn btn-primary">افزودن آدرس جدید</a>
                                    </div>
                                    <div class="box-header">
                                        <span class="box-title">آدرس های شما</span>
                                    </div>
                                    @foreach (var item in Model)
                                    {
                                        <div class="profile-address-item">
                                            <div class="profile-address-item-top">
                                                <div class="profile-address-item-title">@item.Province ، @item.City</div>
                                                <div class="ui-more">
                                                    <button class="btn-remove-address btn btn-danger" type="submit">حذف</button>
                                                </div>
                                            </div>

                                            <div class="profile-address-content">
                                                <ul class="profile-address-info">
                                                    <li>
                                                        <div class="profile-address-info-item location">
                                                            <i class="mdi mdi-map-outline"></i>
                                                            نام تحویل گیرنده : @item.FullName
                                                        </div>
                                                    </li>
                                                    <li>
                                                        <div class="profile-address-info-item location">
                                                            <i class="mdi mdi-email-outline"></i>
                                                            کد پستی : @item.PostCode
                                                        </div>
                                                    </li>
                                                    <li>
                                                        <div class="profile-address-info-item location">
                                                            <i class="mdi mdi-phone"></i>
                                                            شماره تماس : @item.MobileNumber
                                                        </div>
                                                    </li>
                                                    <li>
                                                        <div class="profile-address-info-item location">
                                                            <i class="mdi mdi-account"></i>
                                                            آدرس : @item.AddressDetails
                                                        </div>
                                                    </li>
                                                    <li class="location-link">
                                                        <a href="/UserPanel/EditAddress/@item.AddressID" class="edit-address-link">ویرایش آدرس</a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

